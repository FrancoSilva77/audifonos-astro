---
import Modelo from './Modelo.astro';
---

<main class="contenedor modelos">
  <h2 class="text-center degradado-verde header-modelos">Elige tus TechPRO</h2>

  <div class="listado-modelos">
    <Modelo
      titulo="TechPRO X"
      precio="$299"
      class="modelo modelo-x"
    />
    <Modelo
      titulo="TechPRO Y"
      precio="$399"
      class="modelo modelo-y"
    />
    <Modelo
      titulo="TechPRO Z"
      precio="$499"
      class="modelo modelo-z"
    />
  </div>
</main>

<style>
  .modelos {
    padding: var(--separacion) 0;
  }

  .header-modelos {
    font-size: 6rem;
    margin-bottom: var(--separacion);
  }

  .listado-modelos {
    display: flex;
    flex-direction: column-reverse;
  }

  @media (min-width: 992px) {
    .listado-modelos {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, 20rem);
      gap: 4rem;
    }
  }
</style>
